{
  "version": 2,
  "builds": [
    {
      "src": "spur-chat-frontend/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    {
      "source": "/chat/(.*)",
      "destination": "/api/chat/$1"
    },
    {
      "source": "/(.*)",
      "destination": "./spur-chat-frontend/build/index.html"
    }
  ]
}
